{
  "name": "ketone",
  "version": "2.0.1",
  "private": true,
  "description": "Ketone monorepo - Web, API, and Shared",
  "packageManager": "bun@1.3.4",
  "scripts": {
    "dev:api": "cd api && bun --watch --env-file=../.env.local src/index.ts",
    "dev:web": "cd web && bun run dev",
    "build": "bun run build:all",
    "build:api": "cd api && bun run build",
    "build:web": "cd web && bun run build",
    "typecheck": "bun run typecheck:api && bun run typecheck:web",
    "typecheck:api": "cd api && bun run typecheck",
    "typecheck:web": "cd web && bun run type-check",
    "format": "bunx prettier --write \"**/*.{ts,js,json,vue,html,css,scss,md}\"",
    "format:check": "bunx prettier --check \"**/*.{ts,js,json,vue,html,css,scss,md}\"",
    "build:mobile": "bun run build:web && cd mobile && bun run build",
    "mobile:android": "cd mobile && bun run open:android",
    "mobile:ios": "cd mobile && bun run open:ios",
    "mobile:android:reverse": "cd mobile && bun run android:reverse"
  },
  "workspaces": [
    "api",
    "web",
    "shared",
    "mobile"
  ],
  "devDependencies": {
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0"
  }
}
