{
  "name": "ketone",
  "version": "2.0.0",
  "private": true,
  "description": "Ketone monorepo - Web, API, and Sidecar",
  "packageManager": "bun@1.0.0",
  "scripts": {
    "dev:api": "cd api && bun --watch --env-file=../.env.local src/index.ts",
    "dev:web": "cd web && bun run dev",
    "build": "bun run build:all",
    "build:api": "bun --cwd api run build",
    "build:web": "bun --cwd web run build",
    "typecheck": "bun run typecheck:api && bun run typecheck:web",
    "typecheck:api": "bun --cwd api run typecheck",
    "typecheck:web": "bun --cwd web run typecheck"
  },
  "workspaces": [
    "api",
    "web",
    "shared"
  ]
}
