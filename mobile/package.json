{
  "name": "@ketone/mobile",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "sync": "capacitor sync",
    "sync:android": "capacitor sync android",
    "sync:ios": "capacitor sync ios",
    "open:android": "bun run android:reverse && capacitor open android",
    "open:ios": "capacitor open ios",
    "build": "bun run copy-web && bun run sync",
    "copy-web": "rm -rf dist && cp -r ../web/dist ./dist",
    "run:android": "bun run android:reverse && capacitor run android",
    "run:ios": "capacitor run ios",
    "dev:android": "bun run --cwd ../web build && bun run sync:android && bun run run:android",
    "android:reverse": "~/Library/Android/sdk/platform-tools/adb reverse tcp:3000 tcp:3000"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@capacitor/preferences": "^8.0.0",
    "@capacitor/push-notifications": "^8.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.0"
  }
}
